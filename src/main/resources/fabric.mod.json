{
  "schemaVersion": 1,
  "id": "craftingcode",
  "version": "${version}",

  "name": "CraftingCode Core",
  "description": "A mod about computers and languages",
  "authors": [
    "Bubblie01",
    "ENDERZOMBI102",
    "kb1000"
  ],
  "contact": {
    "sources": "https://github.com/TheCodeCrafters/CraftingCode",
    "issues": "https://github.com/TheCodeCrafters/CraftingCode/issues"
  },

  "license": "MPL-2.0",
  "icon": "assets/craftingcode/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.thecodecrafters.craftingcode.core.CraftingCode"
    ],
    "preLaunch": [
      "io.github.thecodecrafters.craftingcode.core.CraftingCodePreLaunch"
    ],
    "modmenu": [
      "io.github.thecodecrafters.craftingcode.compat.modmenu.CraftingCodeModMenuEntrypoint"
    ]
  },
  "mixins": [
    "craftingcode.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "${minecraft_version}",
    "java": ">=17"
  },

  "suggests": {
    "modmenu": "*"
  },

  "custom": {
    "modmenu": {
      "links": {
        "Discord server": "https://discord.gg/QNByKjHRkC "
      }
    }
  }
}
